  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",
    "baseUrl": "src",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "declaration": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es2015"
    ]
  },
  "exclude": [
    "examples",
    "lib",
    "node_modules"
  ]
}